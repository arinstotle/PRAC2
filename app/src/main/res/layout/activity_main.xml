<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/horizont_back"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="411dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/cardview_shadow_end_color"
                app:srcCompat="@android:drawable/ic_dialog_info" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/ssssssssssssssssssss" />

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:fontFamily="@font/baumans"
                android:text="@string/company_namme"
                android:textColor="@color/light"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/regist_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/baumans"
                android:text="@string/greetings"
                android:textColor="@color/light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/choice_reg_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baumans"
                android:text="@string/regist"
                android:textColor="@color/purple_1" />

            <Button
                android:id="@+id/phone"
                android:layout_width="@dimen/width_button"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/purple_1"
                android:backgroundTintMode="add"
                android:elevation="10dp"
                android:fontFamily="@font/baumans"
                android:text="@string/regist_number"
                android:textSize="14sp"
                app:cornerRadius="15dp"
                app:icon="@drawable/baseline_phone_24" />

            <Button
                android:id="@+id/email"
                android:layout_width="@dimen/width_button"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_1"
                android:fontFamily="@font/baumans"
                android:text="@string/regist_email"
                android:textSize="14sp"
                app:cornerRadius="15dp"
                app:icon="@drawable/baseline_email_24" />

            <Button
                android:id="@+id/google"
                android:layout_width="@dimen/width_button"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_1"
                android:fontFamily="@font/baumans"
                android:onClick="continueWithGoogle"
                android:text="@string/regist_Google"
                android:textSize="14sp"
                app:cornerRadius="15dp"
                app:icon="@drawable/icons8_google_64" />

            <Button
                android:id="@+id/anon"
                android:layout_width="@dimen/width_button"
                android:layout_height="@dimen/height_button"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_1"
                android:fontFamily="@font/baumans"
                android:text="@string/without_registr"
                android:textSize="14sp"
                app:cornerRadius="15dp" />

            <TextView
                android:id="@+id/entering_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:fontFamily="@font/baumans"
                android:text="@string/enter_name"
                android:textColor="@color/purple_1"
                android:textSize="@dimen/text_size"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/enter_name"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:backgroundTintMode="add"
                android:ems="10"
                android:inputType="text"
                android:text="Name"
                android:textColor="@color/purple_1"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:visibility="invisible"
                app:srcCompat="@drawable/baseline_arrow_forward_24" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>